<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ContestActivity"
    android:background="@color/white"
    >


    <TextView
        android:id="@+id/nameOfSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chủ Nghĩa Xã Hội Khoa Học"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/banger"
        />
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/questionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_question"
            android:gravity="center"
            android:padding="20dp"
            android:text="Câu 1: Các Mác và Ph Ăngghen đã sử dụng thuật ngữ nào để nói về giai cấp công nhân ?"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/lobster"
            />

        <TextView
            android:id="@+id/numberQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title_question"
            android:gravity="center"
            android:padding="5dp"
            android:text="Question:"
            android:textSize="20dp"
            android:textColor="@color/purple_500"
            android:fontFamily="@font/lobster"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_normal_answer"
            android:gravity="center"
            android:padding="10dp"
            android:text="Answer 1"
            android:textColor="@color/white"
            android:fontFamily="@font/merriweather"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:textColor="@color/white"
            android:background="@drawable/bg_normal_answer"
            android:padding="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="15dp"
            android:fontFamily="@font/merriweather"
            />
        <TextView
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:textColor="@color/white"
            android:background="@drawable/bg_normal_answer"
            android:padding="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="15dp"
            android:fontFamily="@font/merriweather"
            />
        <TextView
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:textColor="@color/white"
            android:background="@drawable/bg_normal_answer"
            android:padding="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textSize="15dp"
            android:fontFamily="@font/merriweather"
            />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tiếp tục"
            android:background="@drawable/bg_button_next"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết thúc"
            android:background="@drawable/bg_button_cancel"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>

</ScrollView>



</LinearLayout>